<ul class="listing">
    <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li>
                <%= link_to gravatar_for(obj), user_path(obj) %>                   
            </li>
            <li>
                  <%=  link_to obj.username, user_path(obj) %> 
            </li>
            <li>
                <small>
                    <%= pluralize(obj.articles.count, "article") if obj.articles %>
                </small>
            </li>
            <li>
                <% if logged_in? && current_user.admin? %>
                    <%= link_to 'Delete an User', 
                             user_path(obj), 
                             method: :delete,
                             data: { confirm: 'Are you sure you want to delete the user and all its articles?' },
                             class: 'btn btn-danger'%> 
                <% end %>
            </li>
        </div>
    </div>
</ul>    