<div class="row">
    <div class="col-xs-12">
        <%= form_with model: @article, :html => {class: "form-horizontal", role:"form"} , local: true do |form| %>
        <%= render 'shared/error_form_messaging', article: @article %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :title, 'Title' %>
            </div>
            <div class="col-sm-8">
                 <%= form.text_field :title , class: 'form-control', placeholder: "title goes here", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :description, "Description" %>
            </div>
            <div class="col-sm-8">
                 <%= form.text_area :description,rows:10,  class: 'form-control', placeholder: "description goes here"%>
            </div>
        </div>   
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= form.submit class: ' btn btn-primary' %> 
            </div>
        </div>
            
              
    <% end %>
    
        <%= link_to "Back", articles_path %>
    
    </div>
</div>


