
<div class="row">
    <div class="col-xs-12">
        <%= render 'shared/error_form_messaging', obj: @article %>
        <%= form_with model: @article, :html => {class: "form-horizontal", role:"form"} , local: true do |form| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :title, 'Title' %>
            </div>
            <div class="col-sm-8">
                 <%= form.text_field :title , class: 'form-control', placeholder: "title goes here", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :description, "Description" %>
            </div>
            <div class="col-sm-8">
                 <%= form.text_area :description,rows:10,  class: 'form-control', placeholder: "description goes here"%>
            </div>
        </div>  
        <div class="form-group">
            <div class="row">
                <div class="control-label col-sm-2">
                
                     <%= form.label @article.categories, 'Categories' %>
                    
                </div>
                <div class="col-sm-8">
                
                    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= form.submit class: ' btn btn-primary' %> 
            </div>
        </div>             
    <% end %>   
        <%= link_to "Back", articles_path %>
    </div>
</div>


