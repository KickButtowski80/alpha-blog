<h1 align="center">Log in</h1>
<div class="row">
    <div class="col-xs-12">
        <%#= render 'shared/error_form_messaging', obj: @user %>
        <%= form_with scope: :session,url: login_path , :html => {class: "form-horizontal", role:"form"} , local: true do |form| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :email, 'Email' %>
            </div>
            <div class="col-sm-8">
                 <%= form.email_field :email , class: 'form-control', placeholder: "Enter Email", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :password, "password" %>
            </div>
            <div class="col-sm-8">
                 <%= form.password_field :password ,  class: 'form-control', autocomplete: "off" %>
            </div>
        </div>  
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= form.submit "Log in", class: ' btn btn-primary' %> 
            </div>
        </div>              
    <% end %>    
        <%= link_to "Back", articles_path %>    
    </div>
</div>