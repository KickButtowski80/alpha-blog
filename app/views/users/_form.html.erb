<div class="row">
    <div class="col-xs-12">
        <%= render 'shared/error_form_messaging', obj: @user %>
        <%= form_with model: @user , :html => {class: "form-horizontal", role:"form"} , local: true do |form| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :username, 'User Name' %>
            </div>
            <div class="col-sm-8">
                 <%= form.text_field :username , class: 'form-control', placeholder: "Enter user name", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :email, "Email" %>
            </div>
            <div class="col-sm-8">
                 <%= form.email_field :email ,  class: 'form-control', placeholder: "Enter email"%>
            </div>
        </div>   
        <div class="form-group">
            <div class="control-label col-sm-2">
                 <%= form.label :password, "password" %>
            </div>
            <div class="col-sm-8">
                 <%= form.password_field :password ,  class: 'form-control', placeholder: "Enter password"%>
            </div>
        </div>  
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= form.submit @user.new_record? ? "Sign up" : "Update Account" , class: ' btn btn-primary' %> 
            </div>
        </div>
            
              
    <% end %>
    
        <%= link_to "Back", articles_path %>
    
    </div>
</div>