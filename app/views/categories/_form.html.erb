<%= render 'shared/error_form_messaging', obj: @category %>
<%= form_with model: @category, :html => {class: "form-horizontal", role:"form"} , local: true do |form| %>
<div class="form-group">
    <div class="control-label col-sm-2">
         <%= form.label :name, 'Name' %>
    </div>
    <div class="col-sm-8">
         <%= form.text_field :name , class: 'form-control', placeholder: "Enter Category name", autofocus: true %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit 'Create New Category' , class: ' btn btn-primary' %> 
    </div>
</div>              
<% end %>    
<%= link_to "Back", articles_path %>    
